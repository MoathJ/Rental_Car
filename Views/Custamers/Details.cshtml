@model Renteal_Car.Models.Custamer

@{
    ViewData["Title"] = "Details";
}

<style>
    /* Custom CSS for styling */
    .details-container {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .details-title {
        background-color: #007bff;
        color: white;
        padding: 10px;
        border-radius: 5px;
    }
</style>

<h1 class="details-title">Customer Details</h1>

<div class="details-container">
    <div>
        <h4>Custamer</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.CustmerName)</dd>
            <dt class="col-sm-2">Contact Info</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.ContactInfo)</dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.CustmerId">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
