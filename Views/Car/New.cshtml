@model Car
@{
    ViewData["Title"] = "New";
}

<style>
    body {
        background-color: #f8f9fa; 
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #007bff; 
    }

    .form-label {
        font-weight: bold;
        color: #007bff;
    }

    .form-control {
        border: 1px solid #ced4da; 
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff; 
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3; 
        }

    .btn-secondary {
        background-color: #6c757d; 
        border: none;
    }

        .btn-secondary:hover {
            background-color: #495057; 
        }
</style>

<form method="post" class="align-content-center">
    <div>
        <h1>New Car</h1>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="MakeContry" class="form-label"></label>
        </div>
        <div class="col-md-6">
            <input asp-for="MakeContry" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Model" class="form-label"></label>
        </div>
        <div class="col-md-6">
            <input asp-for="Model" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Year" class="form-label"></label>
        </div>
        <div class="col-md-6">
            <input asp-for="Year" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Color" class="form-label"></label>
        </div>
        <div class="col-md-6">
            <input asp-for="Color" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="RentalState" class="form-label"></label>
        </div>
        <div class="col-md-6">
            <input asp-for="RentalState" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Mileage" class="form-label"></label>
        </div>
        <div class="col-md-6">
            <input asp-for="Mileage" class="form-control" />
        </div>
    </div>

    

    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
        <div class="col-md-6">
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Car">Back</a>
        </div>
    </div>
</form>
