@model List<Car>
@{
    ViewData["Title"] = "Index";
}

<div class="container">


    <div class="row mt-5">
        <div class="col-2">
            <h1 style="color: orangered;">CARS</h1>
        </div>
        <div class="col-4">  <a class="btn btn-secondary btn-sm" asp-action="Index" asp-controller="Home">Back</a> </div>
        <div class="col-2 text-end">
            <a asp-action="New" asp-controller="Car" class="btn btn-primary" style="color: antiquewhite;">Add New Car</a>
        </div>
    </div>

    <div class="row mt-3">
        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="https://images.unsplash.com/photo-1537984822441-cff330075342?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="Car Image">
                    <div class="card-body">
                        <h5 class="card-title">@car.MakeContry - @car.Model</h5>
                        <p class="card-text">
                            <strong>Year:</strong> @car.Year<br>
                            <strong>Color:</strong> @car.Color<br>
                            <strong>Rental State:</strong> @car.RentalState<br>
                            <strong>Mileage:</strong> @car.Mileage<br>
                            
                        </p>
                        <a href="@Url.Action("Edit", "Car", new { id = car.CarId })" class="btn btn-primary">Edit</a>
                        <a href="#" class="btn btn-success">State</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
