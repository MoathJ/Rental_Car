@model List<Car>

@{
    ViewData["Title"] = "Index";
}

<style>
    
    body {
        background-image: url("https://www.bmwusa.com/content/dam/bmw/common/all-electric-page/2022/desktop/BMW-All-Electric-EV-Range-and-Charging-Desktop-v2.jpg");
        background-size: cover;
        background-position: center;
        color: white;
    }

    
    .container {
        padding: 20px;
    }

   
    .table {
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

       
        .table th {
            color: #ffc107; 
        }

        
        .table td {
            vertical-align: middle;
        }

   
    .action-link {
        color: #007bff; 
        text-decoration: none;
        margin-right: 10px;
    }

        .action-link:hover {
            color: #0056b3; 
        }
</style>

<div class="container">
    <div class="row mt-5">
        <div class="col-6">
            <h1 style="color: orangered;">CARS</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-action="New" asp-controller="Car" class="btn btn-primary" style="color: antiquewhite;">Add New Car</a>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Car Type</th>
                        <th>Model</th>
                        <th>Create Year</th>
                        <th>Color</th>
                        <th>Rental State</th>
                        <th>Mileage</th>
                        <th>Car State</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var car in Model)
                    {
                        <tr>
                            <td>@car.CarId</td>
                            <td>@car.MakeContry</td>
                            <td>@car.Model</td>
                            <td>@car.Year</td>
                            <td>@car.Color</td>
                            <td>@car.RentalState</td>
                            <td>@car.Mileage</td>
                            <td>
                                <a asp-action="State" asp-route-id="@car.CarId" asp-controller="Car" class="btn btn-small btn-success">State</a>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-controller="Car" asp-route-id="@car.CarId" class="btn btn-small btn-primary">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
